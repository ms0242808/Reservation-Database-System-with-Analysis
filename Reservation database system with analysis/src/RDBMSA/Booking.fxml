<AnchorPane fx:id="SceneP" prefHeight="700.0" prefWidth="939.0" styleClass="root" stylesheets="@../CSS/Booking.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RDBMSA.BookingController">
   <children>
      <AnchorPane fx:id="CustomerP1" prefHeight="700.0" prefWidth="939.0">
         <children>
            <ImageView fx:id="Crowd" fitHeight="50.0" fitWidth="50.0" layoutX="431.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../ICONS/crowd-of-users.png" />
               </image>
            </ImageView>
            <ComboBox fx:id="NPeople" layoutX="363.0" layoutY="85.0" onAction="#SelectedNP" prefHeight="27.0" prefWidth="198.0" promptText="Select number of diners" />
            <DatePicker fx:id="Date" disable="true" layoutX="195.0" layoutY="155.0" onAction="#SelectedDate" />
            <ImageView fx:id="Clock" fitHeight="50.0" fitWidth="50.0" layoutX="560.0" layoutY="140.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../ICONS/clock.png" />
               </image>
            </ImageView>
            <ComboBox fx:id="Time" disable="true" layoutX="622.0" layoutY="153.0" onAction="#SelectedTime" prefWidth="150.0" />
            <AnchorPane fx:id="CustomerDP" layoutX="350.0" layoutY="289.0" prefHeight="200.0" prefWidth="221.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="221.0">
                     <children>
                        <Label fx:id="FLabel" text="First name:" />
                        <TextField fx:id="Ftextfield" onKeyTyped="#EditedFname" />
                        <Label fx:id="SLabel" text="Family name:" />
                        <TextField fx:id="Stextfield" disable="true" onKeyTyped="#EditedSname" />
                        <Label fx:id="PLabel" text="Phone Number:" />
                        <TextField fx:id="Ptextfield" disable="true" onKeyTyped="#EditedP" />
                        <Label fx:id="ELabel" text="Email:" />
                        <TextField fx:id="Etextfield" disable="true" onKeyTyped="#EditedE" />
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
            <Button fx:id="BCnext1" layoutX="429.0" layoutY="554.0" mnemonicParsing="false" onAction="#valiation" onMouseClicked="#BCNextClicked" text="Next ---&gt;" />
            <Label layoutX="461.0" layoutY="609.0" text="1/3" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="CustomerP2" prefHeight="700.0" prefWidth="939.0" visible="false">
         <children>
            <VBox layoutX="198.0" layoutY="193.0" prefHeight="190.0" prefWidth="221.0">
               <children>
                  <Label fx:id="DLabel" text="Your Details:">
                     <graphic>
                        <ImageView fx:id="Detail" fitHeight="25.0" fitWidth="54.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../ICONS/detail.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
                  <Separator prefWidth="200.0" />
                  <Label fx:id="DNLabel" text="Name:" />
                  <Label fx:id="DNPLabel" text="Number of diner:" />
                  <Label fx:id="DELabel" text="Email:" />
                  <Label fx:id="DPLabel" text="Phone number:" />
                  <Label fx:id="DTLabel" text="Time:" />
                  <Label fx:id="DDLabel" text="Date:" />
               </children>
            </VBox>
            <Label fx:id="SRLabel" layoutX="579.0" layoutY="193.0" text="Special Requests:">
               <graphic>
                  <ImageView fx:id="Request" fitHeight="25.0" fitWidth="54.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../ICONS/notepad.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
            <TextArea fx:id="SRtextarea" layoutX="579.0" layoutY="237.0" prefHeight="172.0" prefWidth="200.0" />
            <Button fx:id="BCBack" layoutX="358.0" layoutY="548.0" mnemonicParsing="false" onMouseClicked="#BCBackClicked" text="Back" />
            <Label layoutX="450.0" layoutY="553.0" text="2/3" />
            <Button fx:id="BCConfirm" layoutX="523.0" layoutY="548.0" mnemonicParsing="false" onMouseClicked="#BCConfirmClicked" text="Confirm" />
            <Separator layoutX="456.0" layoutY="204.0" orientation="VERTICAL" prefHeight="242.0" prefWidth="6.0" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="CustomerP3" prefHeight="700.0" prefWidth="939.0" visible="false">
         <children>
            <Label fx:id="ConfirmLabel" layoutX="400.0" layoutY="263.0" text="Confirmation code:" />
            <Button fx:id="BCSee" layoutX="405.0" layoutY="344.0" mnemonicParsing="false" onMouseClicked="#BCseeClicked" text="See you soon!" />
         </children>
      </AnchorPane>
      <ProgressBar fx:id="ProgBar" layoutY="679.0" prefHeight="22.0" prefWidth="939.0" progress="0.0" />
   </children>
</AnchorPane>
